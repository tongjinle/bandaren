/* pages/homepage/homepage.wxss */
.swiper {
  width: 100%;
  height: 600rpx;
}
.slide-image {
  width: 100%;
  height: 600rpx;
}

.card {
  margin-bottom: 20rpx;
}

/* 轮播图浮层 */
.swpier-desc {
  position: absolute;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  z-index: 200;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.swpier-desc .point {
  position: absolute;
  width: 100%;
  bottom: 50rpx;
  text-align: center;
  color: steelblue;
  font-size: 24rpx;
  font-weight: 600;
}

/* empty-page  */
.empty-page {
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  margin-top: 200rpx;
}

.swpier-desc .text {
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  text-align: left;
  padding-left: 5rpx;
}

.swpier-desc .username {
  background-color: red;
  color: white;
  width: 100rpx;
}

.swpier-desc .count {
  margin-top: 10rpx;
}

.swpier-desc .mine {
}
.upvote-btn {
  position: absolute;
  bottom: 50rpx;
  right: 50rpx;
}
.upvote-btn .text {
  width: 90rpx;
  height: 90rpx;
  border-radius: 15rpx;
  border: 1px solid gray;
  background-color: #fff;
  color: red;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom {
  width: 100%;
  position: fixed;
  bottom: 0;
}
